<?xml version="1.0" encoding="UTF-8" ?>
<dds>
    <profiles xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
        <transport_descriptors>
            <transport_descriptor>
                <transport_id>udp_transport</transport_id>
                <type>UDPv4</type>
            </transport_descriptor>
        </transport_descriptors>

        <participant profile_name="vpn_participant" is_default_profile="true">
            <rtps>
                <transport_descriptors>
                    <transport_descriptor>
                        <transport_id>udp_transport</transport_id>
                    </transport_descriptor>
                </transport_descriptors>
                <builtin>
                    <initialPeersList>
                        <!-- REPLACE THESE WITH YOUR VPN IP ADDRESSES -->
                        <!-- Local Machine IP (Quest Streamer) -->
                        <locator>
                            <udpv4>
                                <address>10.8.0.2</address>
                            </udpv4>
                        </locator>
                        <!-- Remote Workstation IP (Isaac Sim) -->
                        <locator>
                            <udpv4>
                                <address>10.8.0.3</address>
                            </udpv4>
                        </locator>
                    </initialPeersList>
                </builtin>
            </rtps>
        </participant>
    </profiles>
</dds>
